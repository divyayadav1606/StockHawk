<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.sam_chordas.android.stockhawk.ui.DetailFragment"
    android:orientation="vertical"
    android:padding="10dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation = "4dp"
        card_view:cardCornerRadius="3dp">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">
            <TableRow
                android:padding="5dp"
                android:layout_width="0dp" >
                <TextView
                    android:text="OPEN"
                    android:gravity="left"/>
                <TextView
                    android:text="57.40"
                    android:gravity="right" />
                <TextView
                    android:text="MKT CAP"
                    android:layout_marginLeft="25dp" />
                <TextView
                    android:text="84.02B"
                    android:gravity="right" />
            </TableRow>

            <TableRow
                android:padding="5dp"
                android:layout_width="0dp" >
                <TextView
                    android:text="HIGH" />
                <TextView
                    android:text="57.40"
                    android:gravity="right" />
                <TextView
                    android:text="52W HIGH"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:text="84.02B"
                    android:gravity="right" />
            </TableRow>
            <TableRow
                android:padding="5dp"
                android:layout_width="0dp" >
                <TextView
                    android:text="LOW"/>
                <TextView
                    android:text="57.40"
                    android:gravity="right" />
                <TextView
                    android:text="52W LOW"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:text="84.02B"
                    android:gravity="right" />
            </TableRow>
            <TableRow
                android:padding="5dp"
                android:layout_width="0dp" >
                <TextView
                    android:text="VOL"/>
                <TextView
                    android:text="57.40"
                    android:gravity="right" />
                <TextView
                    android:text="AVG VOL"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:text="84.02B"
                    android:gravity="right" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:text="P/E"/>
                <TextView
                    android:text="57.40"
                    android:gravity="right" />
                <TextView
                    android:text="YIELD"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:text="84.02B"
                    android:gravity="right" />
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation = "4dp"
        card_view:cardCornerRadius="3dp">

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graph" />

    </android.support.v7.widget.CardView>

</LinearLayout>
